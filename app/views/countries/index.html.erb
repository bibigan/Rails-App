<h1>Searching for - <%= @search_term %></h1>

<% if @countries.any? %>
    <table border="1">
        <thead>
            <tr>
                <th>Flag</th>
                <th>Name</th>
                <th>Region</th>
            </tr>
        </thead>
        <tbody>
            <% @countries.each do |country| %>
            <tr>
            <td>
                <% if country.dig('flags', 'png').present? %>
                <%= image_tag(country['flags']['png'], style: 'width: 100px;') %>
                <% else %>
                <span>no flag</span>
                <% end %>
            </td>
            <td><%= country.dig('name', 'common') %></td>
            <td><%= country['region'] %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% else %>
  <p>no countries.</p>
<% end %>